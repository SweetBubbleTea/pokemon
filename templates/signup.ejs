<!DOCTYPE html>
<html>

<head>
    <title>Sign-Up</title>
    <link href="/public/css/register.css" rel="stylesheet" type="text/css">
</head>

<body>
    <div class="registerPageCenter">
        <h1>Register</h1>

        <form action="/registration" method="get">
            <div class="textField" id="textFieldName">
                <input type="text" name="name" id="name" required>
                <span></span>
                <label>Name </label>
            </div>
            <div class="textField" id="textFieldAge">
                <input type="number" name="age" id="age" required max="99" min="5">
                <span></span>
                <label>Age </label>
            </div>
            <div class="textField">
                <input type="email" name="email" id="email" required>
                <span></span>
                <label>Email </label>
            </div>
            <div class="textField">
                <input type="text" id="username" name="username" required maxlength="20">
                <span></span>
                <label>Username </label>
            </div>
            <div class="textField" id="textFieldPassword">
                <input type="password" name="password" id="password" required>
                <span></span>
                <label>Password </label>
            </div>

            <input type="submit" value="Submit" onclick="confirmMsg()">
            <div class="signup">
                Already a member? <a href="http://localhost:5001/">Login!</a>
            </div>
        </form>
    </div>

    <script>
        function confirmMsg() {
            if (window.confirm("Are you sure all information is correct? \nYou cannot change any information after submitting")) {
                return true
            } else {
                event.stopPropagation()
                event.preventDefault()
            }
        }
    </script>
</body>

</html>